/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Gudea')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #EF4135
background-color = #faf9f0

body
  font-family 'Gudea'
  background-color background-color
  color #444
	
a
  color main-color
  text-decoration none

  &:hover
    text-decoration underline

header
  height 26px
  padding 20px
  color #fff
  font-size 25px
  overflow hidden

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  img
    float left
    margin-right 20px

  h1
    display inline-block
    float left

  h3 
    display inline-block
    float right

  a
    color #fff
    text-decoration none

    &:hover
      text-decoration underline

.container
  width 960px
  margin 50px auto
  overflow hidden
  padding 0px 30px

.main-content
  float left
  width 760px

  p
    margin-bottom 5px

  h2
    color main-color
    font-size 24px
    margin-bottom 10px

.sidebar
  float right
  width 200px

  .widget
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    li
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 960px
  margin 50px auto
  border-top 1px dotted #ccc
  font-size 13px
  padding 10px 30px 0px